<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PM2IIPExamen.Editar"
             Visual="Material"
             Background="#D3DAE3">

    <ScrollView>
        <StackLayout>

            <StackLayout>

                <Image x:Name="Foto" BackgroundColor="Black" Margin="50" WidthRequest="200" HeightRequest="350"/>
            </StackLayout>

            <Image Source="paisajes.gif" x:Name="imgFoto" WidthRequest="20" HeightRequest="20" IsVisible="false" />





            <Grid Margin="20,5,20,0">

                <Label Text="Latitud:"
                Grid.Column="0"
                Grid.Row="0"
               Margin="10,0,0,0"
               HorizontalOptions="StartAndExpand" 
               FontSize="16"
               TextColor="Black"/>

                <Label x:Name="lblLatitud" 
                 Grid.Column="1"
                Grid.Row="0"                 
                   FontSize="16"
               TextColor="#412D42"/>

                <Label Text="Longitud:"
                Grid.Column="0"
                Grid.Row="1"
               Margin="0,0,0,0"
               HorizontalOptions="StartAndExpand" 
               FontSize="16"
               TextColor="Black"/>


                <Label Grid.Column="1" 
                   Grid.Row="1"
                   x:Name="lblLongitud" 
                   Margin="0,0,0,0"                   
                   FontSize="16"
               TextColor="#412D42"/>




            </Grid>
            <Entry Placeholder="Descripción"                     
                    Margin="10,0,30,0"
                   FontSize="16"
                   TextColor="Black"
                   BackgroundColor="#D3DAE3"
                   PlaceholderColor="Black"
                       x:Name="txtDescripcion" />

            <Button x:Name="btnFoto" 
                Text="Tomar Foto" 
                    Grid.Column="0" 
                   Grid.Row="3"
                    BackgroundColor="#412D42"
                    TextColor="White"
                    FontSize="16"
                    CornerRadius="30"
                     TextTransform="None"
                    Margin="10,0,30,0"                    
                Clicked="btnFoto_Clicked"/>

            <Label x:Name="lblAudio" 
                   Margin="10,5,0,0"
                   TextColor="Blue"
                   Text="Estatus Audio"
                   FontSize="16"/>

            <Grid ColumnDefinitions="*,*,*">
                <Button x:Name="btnGrabar"
                    Text="Grabar" 
                    BackgroundColor="#412D42"
                    TextColor="White"
                    FontSize="16"
                    CornerRadius="30"
                     TextTransform="None"
                    Margin="10,0,0,0"
                    Clicked="btnGrabar_Clicked"/>
                <Button Grid.Column="1" 
                    x:Name="btnDetener" 
                    Text="Detener" 
                      BackgroundColor="#412D42"
                    TextColor="White"
                    FontSize="16"
                    CornerRadius="30"
                     TextTransform="None"
                    Margin="0,0,0,0"
                   Clicked="btnDetener_Clicked"/>
                <Button Grid.Column="2" 
                    x:Name="btnReproducirNuevo" 
                    Text="Reproducir nuevo audio"
                      BackgroundColor="#412D42"
                    TextColor="White"
                    FontSize="16"
                    CornerRadius="30"
                     TextTransform="None"
                    Margin="0,0,10,0"
                    Clicked="btnReproducirNuevo_Clicked"/>
            </Grid>

            <Grid ColumnDefinitions="*" >
                <Button x:Name="btnGuardar" 
                    Text="Actualizar"
                    BackgroundColor="#412D42"
                    TextColor="White"
                    FontSize="16"
                    CornerRadius="20"
                     TextTransform="None"
                    Margin="10,0,10,0"
                    Clicked="btnGuardar_Clicked"/>

               

            </Grid>


        </StackLayout>
    </ScrollView>
</ContentPage>